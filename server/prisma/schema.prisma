datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  roomId    String   @id
  createdAt DateTime
  charaName String
}

model SendMsg {
  id        String   @id
  roomId    String
  sender_id Int
  content   String
  sent_at   DateTime
}

model SendCustomMsg {
  id        String   @id
  roomId    String
  sender_id Int
  content   String
  sent_at   DateTime
}

model SendForm {
  id         String   @id
  senderName String
  content    String
  sent_at    DateTime
}
